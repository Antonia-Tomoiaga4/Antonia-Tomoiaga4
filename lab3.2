import java.util.*;

public class vocala {
    private String string;


    public vocala(String str){
        this.string = str;
    }
    public int nrVocale() {
        int voc = 0;

        for (int i = 0; i < string.length(); i++) {
            char c = string.charAt(i);
            if (c == 'a' || c == 'e' || c == 'i' || c == 'o' || c == 'u') {
                voc++;
            }
        }
        return voc;
    }

    public int nrConsoane() {
        int cons = 0;

        for (int i = 0; i < string.length(); i++) {
            char c = string.charAt(i);
            if (Character.isLetter(c) && !(c == 'a' || c == 'e' || c == 'i' || c == 'o' || c == 'u')) {
                cons++;
            }
        }
        return cons;
    }
